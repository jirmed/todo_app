FROM alpine:3.22 AS base

RUN apk update \
    && apk add --no-cache \
    build-base \
    curl \
    git \
    unzip \
    musl-dev \
    openssl \
    bash \
    cmake \
    linux-headers \
    && rm -rf /var/cache/apk/*

WORKDIR /app

# üß™ Fetch dependencies ‚Äî samostatnƒõ cacheovateln√° vrstva
FROM base AS deps

COPY cmake/ cmake/
COPY CMakeLists.txt .

RUN mkdir -p src tests

# Pouze st√°hni z√°vislosti (≈æ√°dn√Ω --build target nen√≠ pot≈ôeba)
RUN mkdir -p src && echo 'void dummy() {}' > src/dummy.cpp
RUN cmake -B build -S . -DBUILD_TESTING=OFF


# üß© Build project ‚Äî pouze aplikace (bez test≈Ø)
FROM base AS build

WORKDIR /app

# Kop√≠ruj dependencies z build _deps, NE z /app/_deps
COPY --from=deps /app/build/_deps/ /app/build/_deps/
COPY src/ src/
COPY CMakeLists.txt .
COPY cmake/ cmake/

RUN cmake -B build -S . -DBUILD_TESTING=OFF \
 && cmake --build build --target todo-server

# üèÅ Final image ‚Äì Alpine runtime (mal√©)
FROM alpine:3.22 AS final

# Nutn√° runtime z√°vislost (libstdc++)
RUN apk add --no-cache libstdc++ curl

WORKDIR /app
COPY --from=build /app/build/todo-server .

CMD ["./todo-server"]
